    <span asp-validation-for="Empresa.emp_fecha_creacion" class="text-danger"></span>
</div>

@{
    //i.	Switch
}
<div class="form-check form-switch mb-3">
    <input class="form-check-input" asp-for="Empresa.emp_estatus" /> @Html.DisplayNameFor(model => model.Empresa.emp_estatus)
</div>


